
@{
    ViewBag.Title = "Mapa";
}

<h2>Mapa</h2>

<table>
    <tr>
        <td colspan="2">Nome do Produto: <input type="text" maxlength="40" size="20" required /></td>
    </tr>
    <tr>
        <td colspan="2">
            Categoria:
            <select id=categoria>
                <option>Quarto</option>
                <option>Cozinha</option>
                <option>Sala</option>
                <option>Móveis</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>Periodo de <input type="date" min="01/01/1900" max="31/12/3000" required /></td>
        <td>Até <input type="date" min="01/01/1900" max="31/12/3000" required /></td>
    </tr>
</table>

<div class="row">
    <div class="col-xl-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-area mr-1"></i>
                Mapa de Calor
            </div>
            <div class="card-body"><canvas id="myAreaChart" width="100%" height="40"></canvas></div>
        </div>
    </div>
</div>
